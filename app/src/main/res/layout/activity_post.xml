<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity"
    android:background="@drawable/login">

    <include
        android:id="@+id/postToolbar"
        layout="@layout/app_bar_layout"/>

    <ImageButton
        android:id="@+id/addImageButton"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/postToolbar"
        android:layout_marginTop="20dp"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/select_image" />

    <EditText
        android:id="@+id/postDescEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addImageButton"
        android:layout_marginTop="1dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="@string/post_something_new_here"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:lines="3"
        android:gravity="top|left"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/submitPostBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/postDescEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:text="@string/update_post"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />


</RelativeLayout>