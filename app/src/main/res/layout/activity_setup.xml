<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity"
    android:background="@drawable/register">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"/>

    <EditText
        android:id="@+id/unameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:layout_below="@id/profileImg"
        android:inputType="textPersonName"
        android:hint="Username"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/username"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/fnameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:layout_below="@id/unameEditText"
        android:inputType="textPersonName"
        android:hint="Full Name"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/name"
        android:padding="15dp"
        />
    <EditText
        android:id="@+id/countryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:layout_below="@id/fnameEditText"
        android:inputType="textPersonName"
        android:hint="Country"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/country"
        android:padding="15dp"/>

    <Button
        android:id="@+id/saveInfoBtn"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:text="Save Information"
        android:layout_below="@id/countryEditText"
        android:background="@drawable/button"
        android:textSize="18sp"
        android:textColor="@color/cardview_light_background"
        />


</RelativeLayout>